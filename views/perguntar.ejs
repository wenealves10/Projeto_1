<body>

    <%- include('./partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Realizar Sua Pergunta</h3>
            </div>
            <div class="card-body">
                <form action="/salvarpergunta" method="POST">
