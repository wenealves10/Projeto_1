                    <input class="form-control" id="titulo" type="text" placeholder="Digite o Titúlo" name="title" />

                    <br><label for="descricao"><strong>Descrição</strong></label>
                    <textarea name="description" id="descricao" class="form-control" placeholder="Digite sua pergunta aqui" ></textarea>
                    <button class="btn btn-success mt-3">Perguntar</button>
                </form>
            </div>
        </div>
    </div>

</body>

